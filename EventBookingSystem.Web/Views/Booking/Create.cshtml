@inject IViewLocalizer localizer
@inject IConfiguration configuration

@{
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpAcc
    var userRole = httpAcc.HttpContext.Session.GetString("UserRole");
    if (userRole == SD.Role_Admin)
    {
        var culture = new CultureInfo("ar-EG");
        CultureInfo.CurrentCulture = culture;
        CultureInfo.CurrentUICulture = culture;
    }
    var lang = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "ar" : "en";
}

<!DOCTYPE html>
<html lang="@lang" dir="@(lang == "ar" ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@localizer["BookingSuccessTitle"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #28a745;
            --secondary-color: #6c757d;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #f0f8ff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .congrats-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 20px;
        }

        .congrats-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            text-align: center;
            transition: transform 0.3s ease;
        }

            .congrats-box:hover {
                transform: translateY(-5px);
            }

        .congrats-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: var(--primary-color);
        }

        h1.congrats-title {
            color: var(--primary-color);
            margin-bottom: 20px;
            font-weight: 700;
        }

        p.congrats-message {
            font-size: 1.25rem;
            margin-bottom: 10px;
        }

        p.congrats-subtext {
            color: var(--secondary-color);
            margin-bottom: 30px;
        }

        .btn-home {
            background-color: var(--primary-color);
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 50px;
            transition: all 0.3s;
        }

            .btn-home:hover {
                background-color: rgba(--bs-primary-rgb);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            }

        @@media (max-width: 768px) {
            .congrats-box {
                padding: 30px;
            }

            .congrats-icon {
                font-size: 3rem;
            }

            h1.congrats-title {
                font-size: 1.8rem;
            }

            p.congrats-message {
                font-size: 1.1rem;
            }
        }

        @@media (max-width: 576px) {
            .congrats-box {
                padding: 25px 20px;
            }

            body {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="congrats-container">
        <div class="congrats-box">
            @if (lang == "ar")
            {
                <div class="congrats-icon">🎉</div>
                <h1 class="congrats-title">تهانينا!</h1>
                <p class="congrats-message">تم تأكيد حجزك بنجاح</p>
                <p class="congrats-subtext">سنرسل تفاصيل الحجز إلى بريدك الإلكتروني</p>
                <a href="/" class="btn btn-home">
                    <span class="me-2">🏠</span>
                    العودة للصفحة الرئيسية
                </a>
            }
            else
            {
                <div class="congrats-icon">🎉</div>
                <h1 class="congrats-title">Congratulations!</h1>
                <p class="congrats-message">Your booking has been confirmed</p>
                <p class="congrats-subtext">We've sent the booking details to your email</p>
                <a href="/" class="btn btn-home">
                    <span class="me-2">🏠</span>
                    Back to Home
                </a>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>