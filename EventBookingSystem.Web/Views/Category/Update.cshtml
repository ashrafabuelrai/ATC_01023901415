@model CategoryUpdateDTO

@{
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpAcc
    var userRole = httpAcc.HttpContext.Session.GetString("UserRole");
    if (userRole == SD.Role_Admin)
    {
        var culture = new CultureInfo("ar-EG");
        CultureInfo.CurrentCulture = culture;
        CultureInfo.CurrentUICulture = culture;
    }
    var dir = "rtl";
    var textAlign = "text-end";
}
<div class="container py-5" dir="@dir">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0" @textAlign>تحديث الفئة</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Update" asp-controller="Category" method="post" id="categoryForm">
                        <input type="text" hidden name="id" value="@ViewBag.id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label">اسم الفئة</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="bi bi-check-circle ms-2"></i>تحديث
                            </button>
                            <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary py-2">
                                <i class="bi bi-x-circle ms-2"></i>إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<style>



    /* RTL specific styles */
    [dir="rtl"] .input-group-text {
        border-radius: 0.375rem 0 0 0.375rem !important;
        border-left: none !important;
        border-right: 1px solid #ced4da !important;
    }

    [dir="rtl"] .input-group > .form-control {
        border-radius: 0 0.375rem 0.375rem 0 !important;
        border-right: none !important;
        border-left: 1px solid #ced4da !important;
    }

    [dir="rtl"] .bi {
        transform: scaleX(-1); /* Flip icons for RTL */
    }
</style>


