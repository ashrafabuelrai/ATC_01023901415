                if (fileInput.files[i].size > maxSize) {
                    e.preventDefault();
                    alert('إحدى الصور تتجاوز الحد المسموح به (5MB)');
                    return false;
                }
            }
            return true;
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}